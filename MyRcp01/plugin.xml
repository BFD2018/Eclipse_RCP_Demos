<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="com.xiong.myrcp01.main.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="com.xiong.myrcp01.main.Perspective"
            name="RCP Perspective"
            id="com.xiong.myrcp01.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="com.xiong.myrcp01.menu.xiong"
               label="Xiong">
            <command
                  commandId="com.xiong.myrcp01.menu.command.testDataBinding"
                  label="OpenTestDataBinding"
                  style="push">
            </command>
            <separator
                  name="MyRcp01.separator1"
                  visible="true">
            </separator>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="com.xiong.myrcp01.menu.command.testDataBinding"
            name="TestDataBindingCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.xiong.myrcp01.handler.TestDataBindingHandler"
            commandId="com.xiong.myrcp01.menu.command.testDataBinding">
      </handler>
   </extension>

</plugin>
